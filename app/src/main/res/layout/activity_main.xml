<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.jason.databindtest.viewModel.ActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/binding_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@{viewmodel.binding_test_txt}"/>

        <Button
            android:id="@+id/binding_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChangeText"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:onClick="@{()->viewmodel.btnChangeText()}"/>

        <EditText
            android:id="@+id/binding_test_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Key Anything"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</layout>